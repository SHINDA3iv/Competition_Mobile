<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/signinFragment"
        android:name="com.example.parkingapp.presentation.SigninFragment"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signinFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signinFragment_to_contentActivity"
            app:destination="@id/contentActivity" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.parkingapp.presentation.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_signinFragment"
            app:destination="@id/signinFragment" />
        <action
            android:id="@+id/action_loginFragment_to_contentActivity"
            app:destination="@id/contentActivity" />
    </fragment>
    <activity
        android:id="@+id/contentActivity"
        android:name="com.example.parkingapp.presentation.ContentActivity"
        android:label="activity_content"
        tools:layout="@layout/activity_content" />
</navigation>